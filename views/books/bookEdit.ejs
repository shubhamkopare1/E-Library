<% layout("/layouts/boilerplate") -%>

<style>
  .issue {
    margin-top: 5rem !important;
  }
  .bg {
    border: 1px solid rgb(45, 45, 45);
    transition: none !important;
  }
  .bg::placeholder {
    color: black;
  }
  .bg:focus {
    transition: none !important;
    box-shadow: 0 0 1px 1px rebeccapurple;
    border: 1px solid rebeccapurple;
  }
</style>

<body>
  <div class="row mt-3 issue">
    <div class="col-8 offset-2">
      <h1 style="color: black">Edit Book Information</h1>
      <!-- Edit Book Form -->
      <form
        method="POST"
        action="/books/book/edit/<%= bookdata._id %>"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input
            type="text"
            id="title"
            name="title"
            value="<%= bookdata.title[0] %>"
            class="form-control bg"
            required
          />
        </div>

        <div class="mb-3">
          <label for="author" class="form-label">Author:</label>
          <input
            type="text"
            id="author"
            name="author"
            value="<%= bookdata.author %>"
            class="form-control bg"
            required
          />
        </div>

        <div class="mb-3">
          <label for="info" class="form-label">Information:</label>
          <textarea id="info" name="info" class="form-control bg" required>
<%= bookdata.info %></textarea
          >
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location:</label>
          <input
            type="text"
            id="location"
            name="location"
            value="<%= bookdata.location %>"
            class="form-control bg"
            required
          />
        </div>

        <button type="submit" class="btn btn-dark mt-3">Save Changes</button>
      </form>
    </div>
  </div>
</body>
